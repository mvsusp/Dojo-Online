<h1>Listing rooms</h1>

<h3>Welcome, <%= cookies[:user] %>! </h3>

<%= link_to 'New Room', new_room_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%=h room.name %></td>
    <td><%=h room.description[0..30] %></td>
    <td><%= link_to 'Enter to room', room %></td>
  </tr>
<% end %>
</table>

<br />
<script type="text/javascript" language="Javascript">
function reload_page() { document.location.reload(true); }
window.onload = function() { setTimeout("reload_page()", 10000); }
</script>
